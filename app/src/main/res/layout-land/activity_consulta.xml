<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultaActivity"
    android:padding="@dimen/margen"
    >
    
    <TextView
        android:id="@+id/tvConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_tv_consulta_titulo"
        android:textSize="@dimen/txt_tv_titulo_consulta"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/marginBottom_tv_consulta"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_below="@+id/tvConsulta"
        android:layout_margin="@dimen/margen"
        android:orientation="horizontal"
        >
        
        <EditText
            android:layout_width="@dimen/weight_cero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:hint="@string/hint_et_consulta"
            />
        
        <Button
            android:id="@+id/btnConsulta"
            android:layout_width="@dimen/weight_cero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:text="@string/txt_btn_limpiarDatos_consulta"
            />
        
    </LinearLayout>
    
</RelativeLayout>